<%- include('partials/header') %>
<script src="../public/js/login.js"></script>
<div class="bg-img" id="login-form">
    <div class="content">
        <header>Login </header>
        <form action="/login" method="post">

            <% if(error){ %>
                <p class="error"><%= message %></p>
            <% } %>

            <div class="user-icon">
                <span class="fa fa-user"></span>
                <input type="email" name="email" id="" value="<%= user.email%>" placeholder="Email" required>
            </div>
            <div class="password-icon">
                <span class="fa fa-lock"></span>
                <input type="password" name="password" id="" value="<%= user.password %>" placeholder="Password" required minlength="8">
            </div>
            <div class="pass">
                <a href="/signup">Don't have an account?Sign Up</a>
            </div>
            <div class="field-2">
                <input type="submit" value="LOGIN">
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer') %>